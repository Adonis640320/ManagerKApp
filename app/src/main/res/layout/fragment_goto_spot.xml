<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_gray_light">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/backarrow" />

        <TextView
            android:id="@+id/detailsignupinfo_menubartitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/connectworkshop_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/ftsize_1" />

    </RelativeLayout>

    <TextView
        android:id="@+id/lblSep"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rlHeader"
        android:background="@color/clr_gray_dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/lblSep"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <com.sincere.kboss.utils.CircularImageView
                android:id="@+id/imgPhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/photo" />

            <TextView
                android:id="@+id/lblName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgPhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/ftsize_7" />

            <TextView
                android:id="@+id/lblWelcomeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/connectworkshop_welcometext"
                android:textColor="#888888"
                android:textSize="@dimen/ftsize_4" />

            <RelativeLayout
                android:id="@+id/rlHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblWelcomeMessage"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/lblHint1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="#555555"
                    android:textSize="@dimen/ftsize_4"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/lblHint2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblHint1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ftsize_3" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnGoLater"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/rlHint"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="#96a6b7"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/connectworkshop_willlater"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ftsize_4" />

            <Button
                android:id="@+id/btnGo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/btnGoLater"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/clr_red_dark"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/connectworkshop_gotoconnect"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ftsize_4" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
