<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_gray_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:id="@+id/rlHeader">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/backarrow"
            />

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jobhistory_title"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/ftsize_1" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/lblSep"
        android:background="@color/clr_gray_dark"
        android:layout_below="@+id/rlHeader"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lblSep"
        android:background="@color/clr_gray_light"
        android:layout_above="@+id/layout_bottom"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clr_gray_light"
            android:padding="7dp"
            android:id="@+id/rlContents">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlInfo"
                android:background="@android:color/white"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl01">

                    <TextView
                        android:id="@+id/lbl01"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/clr_gray_dark"
                        android:text="@string/jobnotificationdetail_workingday"
                        android:textSize="@dimen/ftsize_4"
                        android:gravity="right"
                        />

                    <TextView
                        android:id="@+id/lblWorkday"
                        android:layout_toRightOf="@+id/lbl01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/clr_red_dark"
                        android:text="@string/jobhistory_yearmonthday"
                        android:textSize="@dimen/ftsize_4"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl02"
                    android:layout_below="@+id/rl01"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/lbl02"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"

                        android:textColor="@color/clr_gray_dark"
                        android:text="@string/jobnotificationdetail_workingplace"
                        android:textSize="@dimen/ftsize_4"
                        android:gravity="right"
                        android:layout_centerVertical="true"/>
                    <!--android:layout_centerVertical="true"-->
                    <TextView
                        android:id="@+id/lblWorkplace"
                        android:layout_toRightOf="@+id/lbl02"
                        android:layout_toLeftOf="@+id/imgTick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:text="@string/jobnotification_city1"
                        android:textSize="@dimen/ftsize_4"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        />

                    <ImageView
                        android:id="@+id/imgTick"
                        android:layout_width="18dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/map_mark" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl03"
                    android:layout_below="@+id/rl02"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/lbl03"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/clr_gray_dark"
                        android:text="@string/jobnotificationdetail_workingtime"
                        android:textSize="@dimen/ftsize_4"
                        android:gravity="right"
                        />

                    <TextView
                        android:id="@+id/lblWorktime"
                        android:layout_toRightOf="@+id/lbl03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:text="@string/jobhistory_yearmonthday"
                        android:textSize="@dimen/ftsize_4"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl04"
                    android:layout_below="@+id/rl03"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/lbl04"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/clr_gray_dark"
                        android:text="@string/jobnotificationdetail_kind_count"
                        android:textSize="@dimen/ftsize_4"
                        android:gravity="right"
                        />

                    <TextView
                        android:id="@+id/lblWorktype"
                        android:layout_toRightOf="@+id/lbl04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:text="@string/jobnotificationdetail_count"
                        android:textSize="@dimen/ftsize_4"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl05"
                    android:layout_below="@+id/rl04"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/lbl05"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/clr_gray_dark"
                        android:text="@string/jobnotificationdetail_perday"
                        android:textSize="@dimen/ftsize_4"
                        android:gravity="right"
                        />

                    <TextView
                        android:id="@+id/lblPerDay"
                        android:layout_toRightOf="@+id/lbl05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:text="@string/jobhistory_amount"
                        android:textSize="@dimen/ftsize_4"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/lbl30"
                        android:layout_toRightOf="@+id/lblPerDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:text=" (실수령액: "
                        android:textSize="@dimen/ftsize_4"/>

                    <TextView
                        android:id="@+id/lblRealPay"
                        android:layout_toRightOf="@+id/lbl30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/clr_red_dark"
                        android:text="82,000"
                        android:textSize="@dimen/ftsize_4"/>

                    <TextView
                        android:id="@+id/lbl31"
                        android:layout_toRightOf="@+id/lblRealPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:text=")"
                        android:textSize="@dimen/ftsize_4"/>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/rl05">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rlDetail"
                        android:visibility="gone"
                        android:layout_below="@+id/rl05">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl06WorkDetail"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/lbl06"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/clr_gray_dark"
                                android:text="@string/jobnotificationdetail_workingdetail"
                                android:textSize="@dimen/ftsize_4"
                                android:gravity="right"
                                />

                            <TextView
                                android:id="@+id/lblWorkDetail"
                                android:layout_toRightOf="@+id/lbl06"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@android:color/black"
                                android:text="@string/jobnotificationdetail_workingdetail"
                                android:textSize="@dimen/ftsize_4"
                                android:gravity="left"
                                android:layout_marginLeft="15dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl07"
                            android:layout_below="@+id/rl06WorkDetail"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/lbl07"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/clr_gray_dark"
                                android:text="@string/jobnotificationdetail_loginguy"
                                android:textSize="@dimen/ftsize_4"
                                android:gravity="right"
                                />

                            <TextView
                                android:id="@+id/lblRegisterMan"
                                android:layout_toRightOf="@+id/lbl07"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@android:color/black"
                                android:text="@string/jobnotificationdetail_loginguy"
                                android:textSize="@dimen/ftsize_4"
                                android:gravity="left"
                                android:layout_marginLeft="15dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl08"
                            android:layout_below="@+id/rl07"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/lbl08"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"

                                android:textColor="@color/clr_gray_dark"
                                android:text="@string/jobnotificationdetail_currentboss"
                                android:textSize="@dimen/ftsize_4"
                                android:gravity="right"
                                />
                            <!--android:layout_centerVertical="true"-->
                            <TextView
                                android:id="@+id/lblManager"
                                android:layout_toRightOf="@+id/lbl08"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@android:color/black"
                                android:text="@string/jobnotificationdetail_currentboss"
                                android:textSize="@dimen/ftsize_4"
                                android:gravity="left"
                                android:layout_marginLeft="15dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl09"
                            android:layout_below="@+id/rl08"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/lbl09"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/clr_gray_dark"
                                android:text="@string/jobnotificationdetail_buildingcompany"
                                android:textSize="@dimen/ftsize_4"
                                android:gravity="right"
                                />

                            <TextView
                                android:id="@+id/lblBuildingComp"
                                android:layout_toRightOf="@+id/lbl09"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@android:color/black"
                                android:text="@string/jobnotificationdetail_buildingcompany"
                                android:textSize="@dimen/ftsize_4"
                                android:gravity="left"
                                android:layout_marginLeft="15dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl10"
                            android:layout_below="@+id/rl09"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/lbl10"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/clr_gray_dark"
                                android:text="@string/jobnotificationdetail_wholecount"
                                android:textSize="@dimen/ftsize_4"
                                android:gravity="right"
                                />

                            <TextView
                                android:id="@+id/lblOrgOffice"
                                android:layout_toRightOf="@+id/lbl10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@android:color/black"
                                android:text="@string/jobnotificationdetail_wholecount"
                                android:textSize="@dimen/ftsize_4"
                                android:gravity="left"
                                android:layout_marginLeft="15dp"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rlReadMore"
                        android:visibility="visible"

                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/lblReadMore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/jobnotificationdetail_roadandseedetail"
                            android:textColor="@color/clr_blue_dark"
                            android:textSize="@dimen/ftsize_4"
                            android:layout_marginTop="15dp"
                            />

                        <ImageView
                            android:id="@+id/imgDownArrow"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/lblReadMore"
                            android:src="@drawable/downarrow"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llButtons"
                android:layout_below="@+id/rlInfo"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnHistory"
                    android:text="@string/jobhistorydetail_log"
                    android:textSize="@dimen/ftsize_3"
                    android:textColor="@android:color/white"
                    android:background="#ff9000"
                    android:src="@drawable/history_white"
                    android:clickable="true"
                    android:onClick="onClick"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnContract"
                    android:textSize="@dimen/ftsize_3"
                    android:text="@string/jobhistorydetail_proofdoc"
                    android:textColor="@android:color/white"
                    android:background="#96a6b7"
                    android:src="@drawable/contract_white"
                    android:clickable="true"
                    android:onClick="onClick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llButtons"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:id="@+id/result_message"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/history_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clr_blue_dark"
                        android:textSize="15sp"
                        android:id="@+id/tv_ack_signin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/history_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clr_blue_dark"
                        android:textSize="15sp"
                        android:id="@+id/tv_ack_work"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/history_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clr_blue_dark"
                        android:textSize="15sp"
                        android:id="@+id/tv_ack_payment"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llButtons"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:id="@+id/result_proof"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/contract_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clr_blue_dark"
                        android:layout_marginLeft="3dp"
                        android:textSize="15sp"
                        android:id="@+id/tv_elec_promise"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/contract_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/clr_blue_dark"
                        android:textSize="15sp"
                        android:id="@+id/tv_ack_workbook"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/contract_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/clr_blue_dark"
                        android:textSize="15sp"
                        android:id="@+id/tv_agent_payment"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/clr_gray_light">
        <LinearLayout
            android:id="@+id/layout_guide"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_text"
            android:visibility="visible">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/info"/>
            <TextView
                android:id="@+id/txt_guide1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="13sp"
                android:textColor="#0070c0"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnReqConfirm"
            android:textSize="@dimen/ftsize_3"
            android:text="@string/jobhistorydetail_reqestingverify"
            android:textColor="@android:color/white"

            android:background="@color/clr_red_dark"
            android:visibility="visible"/>
    </LinearLayout>
</RelativeLayout>