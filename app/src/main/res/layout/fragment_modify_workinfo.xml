<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_gray_light"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:id="@+id/rlHeader">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/backarrow"
            android:visibility="visible"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rlTitle"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ftsize_1" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnConfirm"
            android:layout_alignParentRight="true"
            android:background="@color/clr_blue_light"
            android:text="확인"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ftsize_4"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="2dp"
            android:onClick="onConfirmPressed"
            android:visibility="visible"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/lblSep"
        android:background="@color/clr_gray_dark"
        android:layout_below="@+id/rlHeader"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lblSep"
        android:layout_above="@+id/btnSave"
        android:layout_margin="0dp"
        android:padding="15dp"
        android:background="@android:color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl01"
                android:padding="13dp"
                android:background="@drawable/detail_signup_info_container"
                android:clickable="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작업일"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ftsize_1"/>

                <TextView
                    android:id="@+id/tvWorkDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.09.28"
                    android:textColor="@color/clr_gray"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/ftsize_1"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl02"
                android:layout_below="@+id/rl01"
                android:layout_marginTop="5dp"
                android:padding="13dp"
                android:background="@drawable/detail_signup_info_container"
                android:clickable="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="직종"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ftsize_1"/>

                <TextView
                    android:id="@+id/tvSkill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통인부"
                    android:textColor="@color/clr_gray"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/ftsize_1"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl03"
                android:layout_below="@+id/rl02"
                android:layout_marginTop="5dp"
                android:padding="13dp"
                android:background="@drawable/detail_signup_info_container"
                android:clickable="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일당"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ftsize_1"/>

                <TextView
                    android:id="@+id/tvPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90,000"
                    android:textColor="@color/clr_gray"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/ftsize_1"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl04"
                android:layout_below="@+id/rl03"
                android:layout_marginTop="5dp"
                android:padding="13dp"
                android:background="@drawable/detail_signup_info_container"
                android:clickable="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근로평가"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ftsize_1"/>

                <TextView
                    android:id="@+id/tvElagancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중"
                    android:textColor="@color/clr_blue_light"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/ftsize_1"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl05"
                android:layout_below="@+id/rl04"
                android:layout_marginTop="5dp"
                android:padding="13dp"
                android:background="@drawable/detail_signup_info_container"
                android:clickable="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공수"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ftsize_1"/>

                <TextView
                    android:id="@+id/tvWorkAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.0"
                    android:textColor="@color/clr_blue_light"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/ftsize_1"/>

            </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/clr_blue_light"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="작업정보 변경사항 저장"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ftsize_3" />

    <com.todddavies.components.progressbar.ProgressWheel
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/pwLoading"
        android:visibility="invisible"
        android:layout_centerInParent="true" />

</RelativeLayout>
