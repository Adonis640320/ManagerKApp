<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/rlItemMain"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광교 I-PARK"
            android:id="@+id/lblName"
            android:textSize="@dimen/ftsize_1"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/cell_margin_left" />

        <ToggleButton
            android:id="@+id/tglLinkSpot"
            android:layout_width="65dp"
            android:layout_height="27dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/switch_blue"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/cell_margin_right"
            />

        <TextView
            android:id="@+id/lblStat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현장종료"
            android:textColor="@color/clr_red_dark"
            android:textSize="@dimen/ftsize_1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/cell_margin_right"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/lblSep"
            android:background="@color/clr_gray_light"
            android:layout_marginLeft="@dimen/cell_margin_left"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</RelativeLayout>