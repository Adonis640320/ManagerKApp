<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llSteps"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/lblStep01"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:background="@drawable/step_blue"
                    android:textSize="@dimen/ftsize_4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lblStep01"
                    android:text="출근확인"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ftsize_4"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/lblStep02"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@android:color/black"
                    android:background="@drawable/step_blue"
                    android:textSize="@dimen/ftsize_4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lblStep02"
                    android:text="근로평가"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ftsize_4"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/lblStep03"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@android:color/black"
                    android:background="@drawable/step_blue"
                    android:textSize="@dimen/ftsize_4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lblStep03"
                    android:text="작업확인"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ftsize_4"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <com.sincere.kboss.utils.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnFinishWork"
        android:layout_below="@+id/llSteps">

    </com.sincere.kboss.utils.PullToRefreshListView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnFinishWork"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/ftsize_3"
        android:text="작업완료"
        android:textColor="@android:color/white"
        android:background="@color/clr_blue_light" />

</RelativeLayout>