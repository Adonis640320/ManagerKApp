<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblMessage"
        android:layout_toLeftOf="@+id/lblPointValue"
        android:layout_marginRight="5dp"
        android:text="@string/tab_setting_list_1_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/ftsize_1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblDate"
        android:layout_below="@+id/lblMessage"
        android:layout_toLeftOf="@+id/lblPointValue"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="@string/tab_setting_list_1_content"
        android:textColor="@color/clr_gray"
        android:textSize="@dimen/ftsize_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblPointValue"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="+1000P"
        android:textColor="@color/clr_red_dark"
        android:textSize="@dimen/ftsize_3"/>
</RelativeLayout>