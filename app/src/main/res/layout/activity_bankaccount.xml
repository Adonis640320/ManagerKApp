<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:id="@+id/rlHeader">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/backarrow"
            />

        <TextView
            android:id="@+id/detailsignupinfo_menubartitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personalinfosetting_accountinfo"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/ftsize_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnConfirm"
            android:layout_alignParentRight="true"
            android:background="@color/clr_blue_light"
            android:text="확인"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ftsize_4"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="2dp"
            android:onClick="onConfirmPressed"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/lblSep"
        android:background="@color/clr_gray_dark"
        android:layout_below="@+id/rlHeader"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHeader">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlTop"
            android:layout_below="@id/lblSep"
            android:layout_above="@+id/licenseagree_agreeandcontinuebutton"
            android:padding="20dp"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBank"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/bankcard"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBank"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll01"

                android:layout_marginTop="30dp"
                android:background="@color/clr_gray_light"
                android:padding="1dp"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llBank"
                    android:background="@android:color/white"
                    android:weightSum="4"
                    android:padding="7dp"
                    android:gravity="center_vertical"
                    >
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/accountinfo_bankselect"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/ftsize_4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lblBank"
                            android:text="@string/accountinfo_bankselect"
                            android:textColor="@color/clr_gray_dark"
                            android:textSize="@dimen/ftsize_4"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical|right">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/downarrow_line"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll02"
                android:layout_below="@+id/ll01"
                android:background="@color/clr_gray_light"
                android:padding="1dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:weightSum="4"
                    android:padding="7dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/accountinfo_accountnumber"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/ftsize_4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edtBankAccount"
                            android:background="@android:color/transparent"
                            android:hint="@string/accountinfo_accountnumberhint"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/ftsize_4"
                            android:singleLine="true"
                            android:maxLength="64"
                            android:inputType="number"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll03"
                android:layout_below="@+id/ll02"
                android:background="@color/clr_gray_light"
                android:padding="1dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:weightSum="4"
                    android:padding="7dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/accountinfo_accountmanager"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/ftsize_4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/accountinfo_accountmanager"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/ftsize_4"
                            android:id="@+id/edtOwner"
                            android:maxLength="9"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnRegister"
                android:layout_below="@+id/ll03"
                android:background="@color/clr_red_dark"
                android:text="@string/accountinfo_accountnumberregister"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ftsize_3"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="10dp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:id="@+id/llBottom"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
